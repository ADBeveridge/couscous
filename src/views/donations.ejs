<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Audit Statistics</title>
  <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <%- include("partials/navbar") %>
  <h2 class="centert">Statistics</h2>
  <div class="outside">
    <div class="inside">
      <table class="table table-light table-bordered table-hover">
        <tbody>
          <% if (donations) { %>
          <tr>
            <td>
              Total This Week
            </td>
            <td>
              <% var x = 0; %>
              <% for(var x=0; x < donations.length; x++){ %>
                <% x = x + donations[x].paymentAmount; %>
              <% } %>
              <%= x %>
            </td>
          </tr>
          <tr>
            <td>
              Total This Quarter
            </td>
            <td>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <h2 class="centert">All Donations</h2>
  <div class="outside">
    <div class="inside">
      <table class="table table-light table-bordered table-hover">
        <thead>
          <tr>
            <td>Donor</td>
            <td>Amount</td>
            <td>Time</td>
          </tr>
        </thead>
        <tbody>
          <% if (donations) { %>
          <% for(var i=0; i < donations.length; i++) {%>
          <tr>
            <td>
              <!-- Find the donors email. -->
              <% for(var x=0; x < donors.length; x++){ %>
              <% if (donors[x].id == donations[i].donor) { %>
              <%= donors[x].email %>
              <% } %>
              <% } %>
            </td>
            <td>
              <%= '$' + donations[i].paymentAmount.toFixed(2) %>
            </td>
            <td>
              <%= donations[i].paymentDateTime.toDateString() %>
            </td>
          </tr>
          <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

</body>

</html>