<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Users</title>
  <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <%- include("partials/navbar") %>

    <!-- Data rendering -->
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-7">
          <table class="table table-dark table-bordered table-hover">
            <thead>
              <tr>
                <td>Id</td>
                <td>User Name</td>
                <td>Email</td>
              </tr>
            </thead>
            <tbody>
              <% if (users) { %>
                <% for(var i=0; i < users.length; i++) {%>
                  <tr>
                    <td>
                      <%= users[i].id %>
                    </td>
                    <td>
                      <%= users[i].username %>
                    </td>
                    <td>
                      <%= users[i].email %>
                    </td>
                  </tr>
                  <% } %>
                    <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

</body>

</html>