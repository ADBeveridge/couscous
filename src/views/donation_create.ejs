<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <title>Create Donation</title>
  <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <%- include("partials/navbar") %>

  <h2 class="centert">New Donation Entry</h2>

  <div class="outside">
    <div class="inside">
      <form action="/createdonation" method="POST" class="inputform">
        <div class="form-group">
          <label for="donor" class="sr-only">Donor</label>
          <select required class="form-control mb-2" type="text" id="donor" name="donor">
            <option hidden disabled selected value>Donor</option>
            <% if (donors) { %>
            <% for(var i=0; i < donors.length; i++) {%>
            <option><%= donors[i].email %></option>
            <% } %>
            <% } %>
          </select>
          <label for="paymentMethod" class="sr-only">Payment Method</label>
          <select required class="form-control mb-2" type="text" id="paymentMethod" name="paymentMethod" placeholder="Payment Method">
            <option hidden disabled selected value>Payment Method</option>
            <option>Cash</option>
            <option>Debit</option>
            <option>Credit</option>
            <option>Check</option>
            <option>Other</option>
          </select>
          <label for="paymentAmount" class="sr-only">Payment Amount</label>
          <input type="number" id="paymentAmount" name="paymentAmount" placeholder="Amount" step="0.01" required class="form-control mb-2" />

          <label for="paymentDateTime" class="sr-only">Donation Date & Time</label>
          <input type="datetime-local" id="paymentDateTime" name="paymentDateTime" required class="form-control mb-2">

          <label for="paymentType" class="sr-only">Payment Type</label>
          <input type="text" id="paymentType" name="paymentType" placeholder="Payment Type" class="form-control mb-2" />

          <label for="paymentDetails" class="sr-only">Payment Details</label>
          <input type="text" id="paymentDetails" name="paymentDetails" placeholder="Payment Details" class="form-control mb-2" />

          <p></p>
          <button type="submit" class="btn btn-info">Add Donation</button>
          <a class="btn btn-success" href="/add">Create Donor</a>
        </div>
      </form>
    </div>
  </div>
  <p></p>
</body>

</html>