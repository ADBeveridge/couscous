

<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <h1>Donors Due Today</h1>
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Phone</td>
            <td>Address</td>
          </tr>
        </thead>
        <tbody>
          <% if (donations) { %> <% for(var i = 0; i < donations.length; i++) {%>
          <tr>
            <td><%= donations[i].fname + ' ' +  donations[i].lname %></td>
            <td><%= donations[i].email %></td>
            <td><%= donations[i].phone %></td>
            <td><%= donations[i].address %></td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>