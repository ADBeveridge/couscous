<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Users</title>
  <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <%- include("partials/navbar") %>

  <!-- Data rendering -->
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-5 offset-md-3 card bg-light">
        <div class="card-body">
          <form action="/add" method="POST">
            <div class="form-group">
              <label for="fname" class="sr-only">First Name</label>
              <input type="text" name="fname" id="fname" placeholder="First Name" autofocus class="form-control mb-2" />

              <label for="lname" class="sr-only">Last Name</label>
              <input type="text" id="lname" name="lname" placeholder="Last Name" class="form-control mb-2" />

              <label for="email" class="sr-only">Email</label>
              <input type="email" id="email" name="email" placeholder="Email" required class="form-control mb-2" />

              <label for="phone" class="sr-only">Phone</label>
              <input type="text" id="phone" name="phone" placeholder="Phone Number" class="form-control mb-2" />

              <label for="address" class="sr-only">Address</label>
              <input type="text" id="address" name="address" placeholder="Address + City + ZIP" class="form-control mb-2" />

              <label for="preferredContactMethod" class="sr-only">Preferred Contact Method</label>
              <select class="form-control mb-2" type="text" id="preferredContactMethod" name="preferredContactMethod">
                <option hidden disabled selected value>Contact Method</option>
                <option>Email</option>
                <option>Mail</option>
                <option>Phone</option>
                <option>Personal</option>
              </select>

              <button type="submit" class="btn btn-success">Create Donor</button>
              <a href="/createdonation" class="btn btn-info">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>

</html>