<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Users</title>
  <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <%- include("partials/navbar") %>

    <!-- Data rendering -->
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-5 offset-md-3 card bg-dark">
          <div class="card-body">
            <form action="/updateuser/<%= user.id %>" method="POST">
              <input type="text" name="email" value="<%= user.email%>" placeholder="Email" class="form-control mb-3" />
              <input type="password" name="password" value="<%= user.password %>" placeholder="Password"
                class="form-control mb-3" />
              
              <button type="submit" class="btn btn-primary">Save User</button>
              <a href="/users" class="btn btn-primary">Cancel</a>
            </form>
          </div>
        </div>
      </div>
    </div>
</body>

</html>